    <script>
        let currentStep = 1;
        const formData = {};

        function updateProgressIndicator() {
            for (let i = 1; i <= 3; i++) {
                const dot = document.getElementById(`dot-${i}`);
                if (i === currentStep) {
                    dot.classList.add('active');
                } else {
                    dot.classList.remove('active');
                }
            }
        }

        function showStep(step) {
            // Hide all steps
            for (let i = 1; i <= 3; i++) {
                document.getElementById(`step-${i}`).classList.add('hidden');
            }
            
            // Show current step with animation
            const stepElement = document.getElementById(`step-${step}`);
            stepElement.classList.remove('hidden');
            stepElement.classList.add('fade-in');
            
            updateProgressIndicator();
        }

        function validateStep(step) {
            if (step === 1) {
                const name = document.getElementById('name').value;
                const guardianName = document.getElementById('guardian-name').value;
                const institute = document.getElementById('institute').value;
                const course = document.getElementById('course').value;
                const dob = document.getElementById('dob').value;

                if (!name || !guardianName || !institute || !course || !dob) {
                    alert('Please fill all required fields');
                    return false;
                }

                formData.name = name;
                formData.guardianName = guardianName;
                formData.institute = institute;
                formData.course = course;
                formData.dob = dob;
            } else if (step === 2) {
                const phone = document.getElementById('phone').value;
                const email = document.getElementById('email').value;

                if (!phone || !email) {
                    alert('Please fill all required fields');
                    return false;
                }

                formData.phone = phone;
                formData.email = email;
            }

            return true;
        }

        function nextStep() {
            if (validateStep(currentStep)) {
                currentStep++;
                showStep(currentStep);
            }
        }

        function previousStep() {
            currentStep--;
            showStep(currentStep);
        }

        function handleSignup(event) {
            event.preventDefault();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm-password').value;

            if (password !== confirmPassword) {
                alert("Passwords don't match");
                return;
            }

            formData.password = password;

            const signupBtn = document.getElementById('signup-btn');
            signupBtn.textContent = 'Creating Account...';
            signupBtn.disabled = true;

            // TODO: Implement Supabase user creation here
            // const { data, error } = await supabase.auth.signUp({
            //   email: formData.email,
            //   password: formData.password,
            //   options: {
            //     data: {
            //       name: formData.name,
            //       guardian_name: formData.guardianName,
            //       institute: formData.institute,
            //       course: formData.course,
            //       date_of_birth: formData.dob,
            //       phone: formData.phone,
            //       role: 'student'
            //     }
            //   }
            // });

            // Mock signup process
            setTimeout(() => {
                alert('Account created successfully! Please check your email for verification.');
                window.location.href = 'login-page.html';
            }, 1000);
        }

        function handleGoogleSignup() {
            // TODO: Implement Supabase Google OAuth here
            // const { data, error } = await supabase.auth.signInWithOAuth({
            //   provider: 'google',
            //   options: {
            //     redirectTo: `${window.location.origin}/dashboard-page.html`
            //   }
            // });
            
            alert('Google signup will be implemented with Supabase OAuth');
        }

        // Initialize
        showStep(1);
    </script>
